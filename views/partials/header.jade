.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        .fa.fa-trademark
        .fa.fa-pied-piper-alt
    .collapse.navbar-collapse
      ul.nav.navbar-nav.menu.menu-hover-lines
        li(class=title=='Home'?'active':undefined)
          a(href='/users/home') Home
        li(class=title=='FAQ'?'active':undefined)
          a(href='/api') FAQ
        li(class=title=='Help'?'active':undefined)
          a(href='/contact') Help
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/users/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/users/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='')
              .div#headerusername #{user.profile.name || user.username || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li.divider
              li
                a(href='/users/logout') Logout
