extends layout

block content
  body.w3-content(style='max-width:1300px')
    // First Grid: Logo & About
    .w3-row
      .w3-half.w3-black.w3-container.w3-center(style='height:700px')
        .w3-padding-64
          h1 Example Sections
        .w3-padding-64
          a.w3-button.w3-black.w3-block.w3-hover-blue-grey.w3-padding-16(href='#') Logout (Facebook, Google, Twitter, MongoDB)
          a.w3-button.w3-black.w3-block.w3-hover-teal.w3-padding-16(href='#work') Chat (Socket.io)
          a.w3-button.w3-black.w3-block.w3-hover-dark-grey.w3-padding-16(href='#work') Payments (Stripe, Paypal)
          a.w3-button.w3-black.w3-block.w3-hover-brown.w3-padding-16(href='#contact') Contact (Email, GPS)
          a.w3-button.w3-black.w3-block.w3-hover-blue-grey.w3-padding-16(href='#') Push Notifications (Firebase)
          a.w3-button.w3-black.w3-block.w3-hover-blue-grey.w3-padding-16(href='#') Account Management (MongoDB)
          a.w3-button.w3-black.w3-block.w3-hover-blue-grey.w3-padding-16(href='#') Image Store (Google/AWS)
      .w3-half.w3-blue-grey.w3-container(style='height:700px')
        .w3-padding-64.w3-center
          h1 About Your Account
          img.w3-margin.w3-circle(src='/w3images/avatar3.png', alt='Person', style='width:50%')
          .w3-left-align.w3-padding-large
            p
              | Lorem ipusm sed vitae justo condimentum, porta lectus vitae, ultricies congue gravida diam non fringilla.
            p
              | Lorem ipusm sed vitae justo condimentum, porta lectus vitae, ultricies congue gravida diam non fringilla.
    // Second Grid: Work & Resume
    .w3-row
      #work.w3-half.w3-light-grey.w3-center(style='min-height:800px')
        .w3-padding-64
          h2 Your Work
          p Some of your latest uploads.
        .w3-row
          .w3-half
            img(src='/w3images/coffee.jpg', style='width:100%')
          .w3-half
            img(src='/w3images/workbench.jpg', style='width:100%')
        .w3-row.w3-hide-small
          .w3-half
            img(src='/w3images/workbench.jpg', style='width:100%')
          .w3-half
            img(src='/w3images/coffee.jpg', style='width:100%')
        .w3-row.w3-hide-small
          .w3-half
            img(src='/w3images/sound.jpg', style='width:100%')
          .w3-half
            img(src='/w3images/workbench.jpg', style='width:100%')
        br
        p Just call me awesome.
      .w3-half.w3-indigo.w3-container(style='min-height:800px;max-height:800px')
        .w3-padding-64.w3-center
          include partials/chat

    // Third Grid: Swing By & Contact
    #contact.w3-row
      .w3-half.w3-dark-grey.w3-container.w3-center(style='height:700px')
        .w3-padding-64
          h1 Swing By
        .w3-padding-64
          p ..for a cup of coffee, or whatever.
          p Chicago, US
          p +00 1515151515
          p test@test.com
      .w3-half.w3-teal.w3-container(style='height:700px')
        .w3-padding-64.w3-padding-large
          h1 Contact
          p.w3-opacity GET IN TOUCH
          form.w3-container.w3-card-2.w3-padding-32.w3-white(action='/action_page.php', target='_blank')
            .w3-section
              label Name
              input.w3-input(style='width:100%;', type='text', required='', name='Name')
            .w3-section
              label Email
              input.w3-input(style='width:100%;', type='text', required='', name='Email')
            .w3-section
              label Message
              input.w3-input(style='width:100%;', type='text', required='', name='Message')
            button.w3-button.w3-teal.w3-right(type='submit') Send
